<h3><a class="btn btn-secondary" href="/task"><i class="fa fa-plus"></i> Create New</a> Task List
     <form method="post" action="/task/search">
        <div class="input-group add-on">
            <input type="text" class="form-control" name="search" placeholder="Search title" value="{{task.search}}">
            <button type="submit" class="btn btn-info"><i class="fa fa-search"></i></button>
        </div>
    </form>
</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Media</th>
            <th>Target Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.desc}}</td>
            <td><{{this.media.contentType2}} src="data:{{this.media.contentType}};base64,{{this.media.data}}" width="200" height="100" alt="no media"></td>
            <td>{{this.target_dt}}</td>
            <td>{{this.status}}</td>
            <td>
                <a href="/task/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/task/delete/{{this._id}}" onclick="return confirm('Confirm to delete this task ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>